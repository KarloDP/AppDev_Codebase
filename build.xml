<?xml version="1.0" encoding="UTF-8"?>

<project name="AppDev_Codebase" default="compile" basedir=".">
    <!-- Load properties # based on project file structure as well as main java file-->
    <property name="src.dir" value="src"/>
    <property name="build.dir" value="bin"/>
    <property name="classes.dir" value="${build.dir}/classes"/>
    <property name="main.class" value="main.Main"/>

    <target name="compile"> <!-- the names are used by the ant command to know what scripts to run, in this case "ant compile" will run the scripts in this element-->
        <javac srcdir="src" destdir="classes.dir" includeantruntime="false"/>
    </target>

    <target name="jar" depends="compile">
        <jar destfile="jarFiles.dir/${ant.project.name}.jar" basedir="jarFiles.dir">
            <manifest>
                <attribute name="Main-Class" value="${main.class}"/>
            </manifest>
        </jar>
        <echo>JAR created: jarFiles.dir/${ant.project.name}.jar</echo>
    </target>

    <target name="clean"> <!-- deletes directories specified-->
        <delete dir="${build.dir}"/>
        <delete dir="${doc.dir}"/>
    </target>
</project>